generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Farmer {
  id        String   @id @default(uuid())
  name      String
  phone     String   @unique
  district  String
  createdAt DateTime @default(now())

  farms Farm[]
}

model Farm {
  id        String   @id @default(uuid())
  farmerId  String
  location  String
  areaAcres Float
  soilType  String
  createdAt DateTime @default(now())

  farmer Farmer @relation(fields: [farmerId], references: [id])
}
